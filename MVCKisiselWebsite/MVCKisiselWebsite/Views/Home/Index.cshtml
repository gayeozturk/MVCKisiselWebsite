<div class="container overflow-hidden mt-5">
    <div class="row gy-5">

        @foreach (var item in Model.CalismaAlani)
        {
            <div class="col-6">
                <div class="p-3 border bg-light">
                    <h5>@item.AlanAdi</h5>
                    <p>
                        <truncate text="@item.Aciklama" length="200"></truncate>
                    </p>
                </div>
            </div>
        }

        
        
    </div>
</div>


<div class="container-fluid mt-5">

    <div class="row g-0">

        @foreach (var item in Model.Video)
        {
            <div class="col-4 text-center p-5 video">
                
                @Html.Raw(item.Iframe)
                <b>@item.Baslik</b>
                <p>@item.Aciklama</p>
            </div>
        }
        
        
    </div>
</div>