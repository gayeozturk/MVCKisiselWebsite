@model List<CalismaAlani>


<h4> Çalışma alanları / @ViewBag.AlanAdi </h4>

<hr />
<div class="container-fluid">
<div class="row">
        <div class="col-md-3">
            <ul class="list-group">
                <li class="list-group-item active" aria-current="true">Çalışma Alanları</li>
                @foreach (var item in Model)
                {
                    <li class="list-group-item">
                        <a href="@Url.Action("CalismaAlanlari","Home",new {id=item.Id})">
                        @item.AlanAdi
                        </a>
                    </li>
                }
                
                @* <li class="list-group-item">A second item</li>
                <li class="list-group-item">A third item</li>
                <li class="list-group-item">A fourth item</li>
                <li class="list-group-item">And a fifth one</li> *@
            </ul>
        </div>
        <div class="col-md-9">
            @ViewBag.Aciklama
           
        </div>
</div>
</div>